{
  "name": "golden-hammer-services",
  "version": "1.0.0",
  "description": "My Moleculer-based microservices project",
  "scripts": {
    "predev": "npm install",
    "dev": "node --inspect=0.0.0.0:9229 node_modules/moleculer/bin/moleculer-runner --repl --hot",
    "dev-brk": "node --inspect-brk=0.0.0.0:9229 node_modules/moleculer/bin/moleculer-runner --repl --hot",
    "start": "moleculer-runner",
    "cli": "moleculer connect NATS",
    "ci": "jest --watch",
    "test": "jest --coverage",
    "lint": "eslint services"
  },
  "keywords": [
    "microservices",
    "moleculer"
  ],
  "author": "",
  "devDependencies": {
    "@types/socket.io-client": "^3.0.0",
    "@types/tmi.js": "^1.8.1",
    "@types/uuid": "^8.3.4",
    "eslint": "^8.9.0",
    "golden-hammer-shared": "bitbucket:nerdfoundrygaming/golden-hammer-shared",
    "jest": "^27.5.1",
    "jest-cli": "^27.5.1",
    "moleculer-repl": "^0.7.0"
  },
  "dependencies": {
    "ioredis": "^4.28.5",
    "jaeger-client": "^3.19.0",
    "moleculer": "^0.14.19",
    "moleculer-db": "^0.8.17",
    "moleculer-db-adapter-mongo": "^0.4.14",
    "moleculer-io": "^2.0.0",
    "moleculer-web": "^0.10.4",
    "nats": "^2.6.1",
    "tmi.js": "^1.8.5",
    "uuid": "^8.3.2"
  },
  "engines": {
    "node": ">= 16.x.x"
  },
  "jest": {
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "rootDir": "./services",
    "roots": [
      "../test"
    ]
  }
