{
  "name": "golden-hammer-services",
  "version": "1.0.0",
  "description": "My Moleculer-based microservices project",
  "author": "nfgCodex <nfg.codex@outlook.com>",
  "license": "MIT",
  "type": "module",
  "prettier": "@nfg/util/prettier",
  "scripts": {
    "predev": "npm i && npm run clean && npm run link:shared",
    "preprod": "NODE_ENV=development npm i && npm run clean && npm run link:shared",
    "docker-compose": "npm i && npx nfg-compose",
    "link:shared": "npx -y link --deep /golden-hammer-shared",
    "link:shared:full": "npm run link:shared && npx -y install-peerdeps -nox --no-save github:nerdfoundry/golden-hammer-shared",
    "clean": "rimraf ./dist",
    "dev": "NODE_ENV=development concurrently -r 'npm:dev:normal:*'",
    "dev:normal:moleculer": "node --inspect=0.0.0.0:9229 node_modules/moleculer/bin/moleculer-runner --repl --hot",
    "dev:linked": "npm run link:shared && npm run dev",
    "dev:debug": "node --inspect-brk=0.0.0.0:9229 node_modules/moleculer/bin/moleculer-runner --repl --hot",
    "start": "moleculer-runner",
    "cli": "moleculer connect NATS",
    "test": "npx jest -- --watchAll --coverage",
    "testBrk": "node --inspect-brk=0.0.0.0:9229 ./node_modules/.bin/jest --runInBand --watchAll --coverage",
    "lint": "eslint services"
  },
  "keywords": [
    "microservices",
    "moleculer"
  ],
  "devDependencies": {
    "@types/ioredis": "^4.28.10",
    "@types/jest": "^28.1.1",
    "@types/socket.io-client": "^3.0.0",
    "@types/tmi.js": "^1.8.1",
    "@types/uuid": "^8.3.4",
    "golden-hammer-shared": "github:nerdfoundry/golden-hammer-shared",
    "jest": "^28.1.1",
    "jest-cli": "^28.1.1",
    "moleculer-repl": "^0.7.1"
  },
  "dependencies": {
    "@nfg/util": "^0.0.2-7",
    "ioredis": "^4.28.5",
    "jaeger-client": "^3.19.0",
    "moleculer": "^0.14.21",
    "moleculer-db": "^0.8.18",
    "moleculer-db-adapter-mongo": "^0.4.14",
    "moleculer-io": "^2.0.0",
    "moleculer-web": "^0.10.4",
    "nats": "^2.7.1",
    "tmi.js": "^1.8.5",
    "uuid": "^8.3.2"
  },
  "engines": {
    "node": ">= 16.x.x"
  },
  "jest": {
    "resetModules": true,
    "resetMocks": true,
    "moduleNameMapper": {
      "@/(.*)$": "<rootDir>/$1"
    },
    "collectCoverageFrom": [
      "<rootDir>/services/**/*.{js,jsx}",
      "!<rootDir>/test/helpers/**",
      "!<rootDir>/node_modules/**"
    ]
  }
}
